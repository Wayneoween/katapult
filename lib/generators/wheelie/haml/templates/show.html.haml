%h1
  = <%= model_name(:ivar) %>.to_s

.tools
  = link_to 'All <%= model_name(:human_plural) %>', <%= wui.path(:index) %>, class: 'tools__button'
  = link_to 'Edit', <%= wui.path(:edit, model_name(:ivar)) %>, class: 'tools__button is_primary'
  = link_to 'Destroy', <%= wui.path(:destroy, model_name(:ivar)) %>, method: :delete, class: 'tools__button', confirm: 'Really destroy?'
<% wui.member_actions.each do |action| -%>
  = link_to '<%=
      action.name.humanize.titleize
    %>', <%=
      wui.path(action, model_name(:ivar))
    %>, class: 'tools__button'<%=
      ", method: :#{action.method}" unless action.get?
    %>
<% end -%>

%dl.values
<% wui.model.attrs.each do |attribute| -%>
<% getter = "#{model_name(:ivar)}.#{attribute.name}" -%>
  %dt
    = <%= model_name(:class_name) %>.human_attribute_name(:<%= attribute.name %>)
  %dd
<% case attribute.type -%>
<% when 'date', 'datetime' -%>
    = l(<%= getter %>)
<% when 'text' -%>
    = simple_format(<%= getter %>)
<% when 'markdown' -%>
    = markdown(<%= getter %>)
<% when 'flag' -%>
    = <%= getter %> ? 'Yes' : 'No'
<% when 'email' -%>
    = mail_to <%= getter %>, nil, class: 'hyperlink'
<% when 'url' -%>
    = link_to <%= getter %>, <%= getter %>, class: 'hyperlink'
<% when 'money' -%>
    = <%= getter %>
    â‚¬
<% else -%>
    = <%= getter %>
<% end -%>
<% end -%>
